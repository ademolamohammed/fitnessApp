<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.fitnessproject.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_workout"
        android:name="com.example.fitnessproject.ui.workout.WorkoutFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_workout" />

    <fragment
        android:id="@+id/navigation_calories"
        android:name="com.example.fitnessproject.ui.calories.CaloriesFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_calories" />

    <fragment
        android:id="@+id/navigation_activity"
        android:name="com.example.fitnessproject.ui.activity.ActivityFragment"
        android:label="@string/title_activity"
        tools:layout="@layout/fragment_activity" />
</navigation>